{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": [
    "gadget"
  ],
  "properties": {
    "gadget": {
      "type": "object",
      "required": [
        "name",
        "type",
        "characteristics"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "type": "integer",
          "minimum": 0
        },
        "characteristics": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "type",
              "min",
              "max",
              "steps",
              "val"
            ],
            "properties": {
              "type": {
                "type": "integer",
                "minimum": 0
              },
              "min": {
                "type": "integer"
              },
              "max": {
                "type": "integer"
              },
              "step": {
                "type": "integer",
                "minimum": 0
              },
              "value": {
                "type": "integer"
              }
            }
          }
        }
      }
    }
  }
}